@using Microsoft.AspNetCore.Components.Web;
@using CRM.BLL.DTO;
@using CRM.DAL.Entities;
@using BlazorInputFile;
@using BlazorPro.Spinkit;
@using Radzen
@using Radzen.Blazor
@inherits MainBase
<div class="main">
    <header>
        <div>
            @if (user != null && user.Identity.IsAuthenticated && TempService.CurrentUser != null)
            {
                <button @onclick="async _ => await OpenModalForAddRegion()">Добавить Регион</button>
                <button @onclick="async _ => await OpenModalForAddCountry()">Добавить Страну</button>
            }
        </div>
    </header>
    <div class="grid-container">
        <SpinLoader IsLoading="@(isLoading)">
            <ContentTemplate>
                <!-- LEFT div Begin -->
                <div class="left bg-black" style="grid-template-areas:@LeftStyle">

                    @if (user != null && user.Identity.IsAuthenticated && TempService.CurrentUser != null)
                    {

                        <div class="title title-new-companies" @onclick="OpenNewCompaniesDiv">
                            <span class="titleName">
                                Новые компании
                            </span>
                            <div @onclick="OpenModalForNewCompany" class="plus flex-center">
                                +
                            </div>
                            <div @onclick="OpenModalForImportFile" class="upload flex-center">
                                U
                            </div>
                        </div>
                        <div class="content content-new-companies" style="display:@NewCompanyDisplay">
                            @foreach (var company in NewCompanies ?? Enumerable.Empty<CompanyDTO>())
                            {
                                if (company.Id != SelectedId)
                                {
                                    <div class="company-element" @onclick="@(async _ => await SelectCompanyElement(company.Id))">
                                        <a @onclick:stopPropagation="true" @onclick="async _=> await AddLog(WebSite:company.Website)" href="http://@company.Website" target="_blank">@company.CompanyLegalName</a> <br />
                                    </div>
                                }
                                else
                                {
                                    <div style="background:red" class="company-element" @onclick="@(async _ => await SelectCompanyElement(company.Id))">
                                        <a @onclick:stopPropagation="true" @onclick="async _=>await AddLog(WebSite:company.Website)" href="http://@company.Website" target="_blank">@company.CompanyLegalName</a> <br />
                                    </div>
                                }
                            }
                        </div>
                        <div class="title title-qualified" @onclick="OpenQualifiedDiv">
                            Квалифицированные
                        </div>
                        <div class="content content-qualified" style="display:@QualifiedDisplay">
                            @foreach (var company in QualifiedCompanies ?? Enumerable.Empty<CompanyDTO>())
                            {
                                if (company.Id != SelectedId)
                                {
                                    <div class="company-element" @onclick="@(async _ => await SelectCompanyElement(company.Id))">
                                        <a @onclick:stopPropagation="true" @onclick="async _=>await AddLog(WebSite:company.Website)" href="http://@company.Website" target="_blank">@company.CompanyLegalName</a> <br />
                                    </div>
                                }
                                else
                                {
                                    <div style="background:red" class="company-element" @onclick="@(async _ => await SelectCompanyElement(company.Id))">
                                        <a @onclick:stopPropagation="true" @onclick="async _=>await AddLog(WebSite:company.Website)" href="http://@company.Website" target="_blank">@company.CompanyLegalName</a> <br />
                                    </div>
                                }
                            }
                        </div>
                        <div class="title title-not-qualified" @onclick="OpenNotQualifiedDiv">
                            Не квалифицированные
                        </div>
                        <div class="content content-not-qualified" style="display:@NotQualifiedDisplay">
                            @foreach (var company in NotQualifiedCompanies ?? Enumerable.Empty<CompanyDTO>())
                            {
                                if (company.Id != SelectedId)
                                {
                                    <div class="company-element" @onclick="@(async _ => await SelectCompanyElement(company.Id))">
                                        <a @onclick:stopPropagation="true" @onclick="async _ => await AddLog(WebSite:company.Website)" href="http://@company.Website" target="_blank">@company.CompanyLegalName</a> <br />
                                    </div>
                                }
                                else
                                {
                                    <div style="background:red" class="company-element" @onclick="@(async _ => await SelectCompanyElement(company.Id))">
                                        <a @onclick:stopPropagation="true" @onclick="async _ => await AddLog(WebSite:company.Website)" href="http://@company.Website" target="_blank">@company.CompanyLegalName</a> <br />
                                    </div>
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <h1>Авторизуйтесь!!!</h1>
                    }
                </div>
                <!-- LEFT div End -->
                <!-- CENTER div Begin -->
                <div class="center bg-black">
                    @if (user != null && user.Identity.IsAuthenticated && TempService.CurrentUser != null)
                    {
                        <div class="company-information">
                            Информация о компании
                            @if (SelectedCompany != null)
                            {
                                <table>
                                    <thead>
                                        <tr>
                                            <th colspan="8">
                                                @SelectedCompany.CompanyLegalName
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                Id
                                            </td>
                                            <td>
                                                Trading Name
                                            </td>
                                            <td>
                                                WebSite
                                            </td>
                                            <td>
                                                HQ Based in country
                                            </td>
                                            <td>
                                                LeadOwner
                                            </td>
                                            <td>
                                                Qualification
                                            </td>
                                            <td>
                                                Qualificated Date
                                            </td>
                                            <td>
                                                Linkedin
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @SelectedCompany.Id
                                            </td>
                                            <td>
                                                @SelectedCompany.TradingName
                                            </td>
                                            <td>
                                                @SelectedCompany.Website
                                            </td>
                                            <td>
                                                @SelectedCompany.HGBasedInCountryName
                                            </td>
                                            <td>
                                                @SelectedCompany.LeadOwnerFullName
                                            </td>
                                            <td>
                                                @SelectedCompany.QualificationName
                                            </td>
                                            <td>
                                                @SelectedCompany.QualifiedDate.ToShortDateString();
                                            </td>
                                            <td>
                                                @if (SelectedCompany.CompanyLinkedinFullLink == null)
                                                {
                                                    <p>Отсутствует</p>
                                                }
                                                else
                                                {
                                                    <a target="blank" @onclick="async _=> await AddLog(LinkedinOfTradingName:SelectedCompany.TradingName)" href="http://@SelectedCompany.CompanyLinkedinFullLink">Перейти</a>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            }
                        </div>
                    }
                    <!-- CONTROLS div Begin -->
                    <div class="controls bg-black">
                        @if (user != null && user.Identity.IsAuthenticated && TempService.CurrentUser != null)
                        {
                            <div class="flex-center not-q-div">
                                <button id="i1" @onclick="SetNotQualify" disabled="@IsDisabled">Квалификацию не прошёл</button>
                            </div>
                            <div class="flex-center q-div">
                                <button @onclick="SetQualify" disabled="@IsDisabled">Квалифицировать как клиента</button>
                            </div>
                        }
                        else
                        {
                            <div class="flex-center not-q-div">
                                <button id="i1" @onclick="SetNotQualify" disabled="true">Квалификацию не прошёл</button>
                            </div>
                            <div class="flex-center q-div">
                                <button @onclick="SetQualify" disabled="true">Квалифицировать как клиента</button>
                            </div>
                        }
                    </div>
                    <!-- CONTROLS div END -->
                    <!-- PROSPECT-FINDER div Begin -->
                    <div class="prospect-finder bg-black">
                        @if (user != null && user.Identity.IsAuthenticated && TempService.CurrentUser != null)
                        {
                            @if (SelectedId != 0)
                            {
                                <div class="controls bg-black">
                                    <div class="flex-center">
                                        <button @onclick="async _ => await FindHunter()">Найти контакты для @SelectedCompany.TradingName</button>
                                    </div>
                                    <div class="flex-center">
                                        <button @onclick="async _ => await OpenModalForNewContact()">Добавить новый контакт @SelectedCompany.TradingName</button>
                                    </div>
                                </div>

                                @if (checkedContacts.Count != 0)
                                {
                                    <div class="controls bg-black">
                                        <div class="flex-center">
                                            <button @onclick="Send">Отправить в lemmlist @checkedContacts.Count адресов </button>
                                        </div>
                                        <div class="flex-center">
                                            <button @onclick="async _=> await ClearCheckedContacts()">Clear</button>
                                        </div>
                                    </div>
                                }
                                @if (SelectedCompanyContacts != null)
                                {
                                    <table>
                                        <thead>
                                            <tr>
                                                <th colspan="7">
                                                    Найденные контакты @SelectedCompany.CompanyLegalName
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>
                                                    Id
                                                </th>
                                                <th>
                                                    Должность
                                                </th>
                                                <th>
                                                    SelectedCompanyContacts                 Email
                                                </th>
                                                <th>
                                                    Имя
                                                </th>
                                                <th>
                                                    Фамилия
                                                </th>
                                                <th>
                                                    Linkedin Id
                                                </th>
                                                <th>
                                                    Выбрать
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var contact in SelectedCompanyContacts)
                                            {
                                                <tr>
                                                    <td>
                                                        @contact.Id
                                                    </td>
                                                    <td>
                                                        @contact.Position
                                                    </td>
                                                    <td>
                                                        @contact.Email
                                                    </td>
                                                    <td>
                                                        @contact.FirstName
                                                    </td>
                                                    <td>
                                                        @contact.Surname
                                                    </td>
                                                    <td>
                                                        @if (contact.LinkedinId == 0)
                                                        {
                                                            <p>Отсутсвует</p>
                                                        }
                                                        else
                                                        {
                                                            Linkedin linkedin = Linkedins.Where(p => p.Id == contact.LinkedinId).FirstOrDefault();
                                                            <a @onclick="async _=> await AddLog(LinkedinOfUser:linkedin.FullLink)" href="https://@linkedin.FullLink">Перейти</a>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (checkedContacts.Contains(contact.Id))
                                                        {
                                                            <input type="checkbox" value="@contact.Id" @onchange="(_=>Check(contact.Id))" checked />
                                                        }
                                                        else
                                                        {
                                                            <input type="checkbox" value="@contact.Id" @onchange="(_=>Check(contact.Id))" />
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            }
                        }
                    </div>
                    <!-- PROSPECT-FINDER div End -->
                </div>
                <!-- CENTER div End -->
                <!-- RIGHT div Begin -->
                <div class="right bg-black">

                    @if (user != null && user.Identity.IsAuthenticated && TempService.CurrentUser != null)
                    {
                        <div class="flex-center user">
                            @TempService.CurrentUser.Email <br />
                            <br />
                            <button @onclick="async _=> await Logout()">Выйти</button>
                        </div>
                    }
                    else
                    {
                        <div>
                            <p>Введите login </p>
                            <input type="text" name="Email" @bind="login" />
                            <p>Введите пароль </p>
                            <input type="password" name="Password" @bind="password" />
                            <input type="submit" value="Войти" class="btn btn-outline-dark" @onclick="async _=> await Login()" />
                        </div>
                    }

                    <div class="scroll logs">
                        @if (user != null && user.Identity.IsAuthenticated && TempService.CurrentUser != null)
                        {
                            @if (logs != null)
                            {

                                @foreach (var log in logs)
                                {
                                    <div class="log-cell">
                                        <div class="log-user">
                                            @currentUser.Email
                                        </div>
                                        <div class="log-action">
                                            @log.Action
                                        </div>
                                        <div class="log-date">
                                            @log.CreatedDate
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </ContentTemplate>
            <LoadingTemplate>
                <!-- The Modal -->
                <div class="modal bg-black" style="display:block">
                    <!-- Modal content -->
                    <div class="modal-content">
                        <p>@MessageForLoading</p>
                        <CircleFade Color="#e67e22" Size="50px" Center="true" />
                    </div>
                </div>
            </LoadingTemplate>
        </SpinLoader>
    </div>
    <footer>
        <SpinLoader IsLoading="@(isFooterLoading)">
            <LoadingTemplate>
                <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="margin-bottom: 20px" />
            </LoadingTemplate>
        </SpinLoader>
    </footer>
</div>
@if (user != null && user.Identity.IsAuthenticated && TempService.CurrentUser != null)
{
    <!-- The Modal -->
    <div class="modal bg-black" style="display:@AddCompanyModalDisplay">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" @onclick="Close">&times;</span>
            <label class="red" style="display:@ExceptionLabelDisplay">@ExceptionLabel</label>
            <table>
                <tbody>
                    <tr>
                        <td>
                            <label>Company legal name</label>
                        </td>
                        <td>
                            <input type="text" @bind="NewCompany.CompanyLegalName">
                        </td>
                        <td>
                            <label>Trading name</label>
                        </td>
                        <td>
                            <input type="text" @bind="NewCompany.TradingName">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Website</label>
                        </td>
                        <td>
                            <input type="text" @bind="NewCompany.Website">
                        </td>
                        <td>
                            <label>Company Linkedin</label>
                        </td>
                        <td>
                            <input type="text" @bind="NewCompany.CompanyLinkedinLink">
                        </td>
                    </tr>
                </tbody>
            </table>
            <label>Select country</label>
            <select @bind="NewCompany.HGBasedInCountryId" required>
                <option value="0" selected disabled>Выберите страну</option>
                @foreach (var country in countries)
                {
                    <option value="@country.Id">@country.Name</option>
                }
            </select><br>
            <button @onclick="async _=>await AddCompany()">OK</button><button @onclick="Close">Cancel</button>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal bg-black" style="display:@SendLemmlistModalDisplay">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" @onclick="Close">&times;</span>
            <p>Добавить в рекламмную компанию @checkedContacts.Count людей</p>
            @if (SendForContacts != null)
            {
                @foreach (var contact in SendForContacts)
                {
                    @contact.Email <br />
                }
            }
            <button @onclick="async _=>await SendLemlist()">OK</button><button @onclick="Close">Cancel</button>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal bg-black" style="display:@ImportContactsModalDisplay">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" @onclick="Close">&times;</span>
            <p>A single file input that uploads automatically on file selection</p>
            <p>@UploadStatus</p>
            <InputFile OnChange="HandleSelection" />
            <button @onclick="Close">Cancel</button>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal bg-black" style="display:@AddLemlistStatisticModalDisplay">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" @onclick="Close">&times;</span>
            <p>Отправлена @AddLemlistStatistic.successCount провалена @AddLemlistStatistic.failedCount</p>
            <button @onclick="Close">Cancel</button>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal bg-black" style="display:@MessageModalDisplay">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" @onclick="Close">&times;</span>
            <p>@MessageForModal</p>
            <button @onclick="Close">Cancel</button>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal bg-black" style="display:@AddRegionModalDisplay">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" @onclick="Close">&times;</span>
            <label>Добавить новый Регион </label>
            <input type="text" @bind="NewRegionName">
            <button @onclick="async _=>await AddRegion()">Добавить</button>
            <button @onclick="Close">Cancel</button>
            <table>
                <tbody>
                    @foreach (var region in regions)
                    {
                        <tr>
                            <td>
                                <label>@region.Id</label>
                            </td>
                            <td>
                                <label>@region.Name</label>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- The Modal -->
    <div class="modal bg-black" style="display:@AddCountryModalDisplay">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" @onclick="Close">&times;</span>
            <label class="red" style="display:@ExceptionLabelDisplay">@ExceptionLabel</label>
            <label>Добавить новую страну </label>
            <table>
                <tbody>
                    <tr>
                        <td>
                            Название страны
                        </td>
                        <td>
                            <input type="text" @bind="NewCountry.Name">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Столица
                        </td>
                        <td>
                            <input type="text" @bind="NewCountry.Capital">
                        </td>
                    </tr>
                </tbody>
            </table>
            <label>Select Region</label>
            <select @bind="NewCountry.RegionId" required>
                <option value="0" selected disabled>Выберите Регион</option>
                @foreach (var region in regions)
                {
                    <option value="@region.Id">@region.Name</option>
                }
            </select><br>
            <button @onclick="async _=>await AddCountry()">Добавить</button>
            <button @onclick="Close">Cancel</button>
            <table>
                <tbody>
                    @foreach (var country in countries)
                    {
                        <tr>
                            <td>
                                <label>@country.Id</label>
                            </td>
                            <td>
                                <label>@country.Name</label>
                            </td>
                            <td>
                                <label>@country.Capital</label>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal bg-black" style="display:@NewContactModalDisplay">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" @onclick="Close">&times;</span>
            <label class="red" style="display:@ExceptionLabelDisplay">@ExceptionLabel</label>
            @if (SelectedCompany != null)
            {
                <label>Добавить новый контакт @SelectedCompany.CompanyLegalName </label>
            }
            <table>
                <tbody>
                    <tr>
                        <td colspan="2">
                            Email
                        </td>
                        <td colspan="2">
                            <input type="text" @bind="NewContact.Email">
                        </td>
                        <td colspan="2">
                            Должность
                        </td>
                        <td colspan="2">
                            <input type="text" @bind="NewContact.Position">
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            Имя
                        </td>
                        <td colspan="2">
                            <input type="text" @bind="NewContact.FirstName">
                        </td>
                        <td colspan="2">
                            Фамилия
                        </td>
                        <td colspan="2">
                            <input type="text" @bind="NewContact.Surname">
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            Linkedin
                        </td>
                        <td colspan="5">
                            <input class="linkedin-input" type="text" @bind="NewContact.LinkedinLink">
                        </td>
                    </tr>
                </tbody>
            </table>
            <button @onclick="async _=>await AddNewContact()">Добавить</button>
            <button @onclick="Close">Cancel</button>
        </div>
    </div>
}
